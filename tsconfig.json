{
    "compilerOptions": {
        "lib": ["ES2021"],
        "module": "CommonJS",
        "target": "ES2021",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        "declaration": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "properties": ["src/@types/properties"]
        },
        "outDir": "./dist",
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.test.ts"
    ]
}
